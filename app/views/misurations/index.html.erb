
<h1>Misurazioni </h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>MAC</th>
      <th>Valore</th>
      <th>Unit√† di misura</th>
      <th>Data</th>
      <th>ora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @misurations.each do |misuration| %>
      <tr>
        <td><%= misuration.mac %></td>
        <td><%= misuration.value %></td>
        <td><%= misuration.unit %></td>
        <td><%= misuration.created_at.strftime("%d-%m-%Y") %></td>
        <td><%= misuration.created_at.strftime("%T")%></td>
        <td><%= link_to 'Visualizza', misuration, class: "button-success pure-button" %></td>
        <td><%= link_to 'Modifica', edit_misuration_path(misuration), class: "button-warning pure-button" %></td>
        <td><%= link_to 'Elimina', misuration, method: :delete, data: { confirm: 'Sei sicuro?' } , class: "button-error pure-button"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Aggiungi Misurazione', new_misuration_path ,class:"pure-button pure-button-primary"%>
