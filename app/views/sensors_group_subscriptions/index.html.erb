<p id="notice"><%= notice %></p>

<p><h1> Iscrizione gruppi di sensori </h1></p>

<table class="pure-table">
  <thead>
    <tr>
      <th>Gruppo</th>
      <th>MAC sensore</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensors_group_subscriptions.each do |sensors_group_subscription| %>
      <tr>
        <td><%= sensors_group_subscription.sensors_group.nome %></td>
        <td><%= sensors_group_subscription.sensor.mac %></td>
        <td><%= link_to 'Show', sensors_group_subscription,class: "pure-button pure-button-active" %></td>
        <td><%= link_to 'Destroy', sensors_group_subscription,class: "pure-button pure-button-active", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div new>
  <p><%= link_to 'Nuova iscrizione a gruppi di sensori', new_sensors_group_subscription_path ,class:"btn pure-button pure-button-primary"%></p>
</div>
