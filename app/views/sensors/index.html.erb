<p id="notice"><%= notice %></p>

<h1>Sensori</h1>

<table>
  <thead>
    <tr>
      <th>Mac</th>
      <th>Url</th>
      <th>Tipo</th>
      <th>Latitudine</th>
      <th>Longitudine</th>
      <th>Unit misura</th>
      <th>Public</th>
      <th>Downtime to alarm</th>
      <th>Last firmware update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensors.each do |sensor| %>
      <tr>
        <td><%= sensor.mac %></td>
        <td><%= sensor.url %></td>
        <td><%= sensor.tipo %></td>
        <td><%= sensor.latitudine %></td>
        <td><%= sensor.longitudine %></td>
        <td><%= sensor.unit_misura %></td>
        <td><%= sensor.public %></td>
        <td><%= sensor.downtime_to_alarm %></td>
        <td><%= sensor.last_firmware_update %></td>
        <td><%= link_to 'Show', sensor %></td>
        <td><%= link_to 'Edit', edit_sensor_path(sensor) %></td>
        <td><%= link_to 'Destroy', sensor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

